<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProject">


    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/back_arrow"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Project"
            android:textSize="50sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Fill out the form below with all the details of your project and we will get back to you soon!"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/projectNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Your Project"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_input_bg"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/projectNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/projectSummaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summarize your project"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/summproject"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded_input_bg"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/projectSummaryTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/imageproj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Image"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/summproject"
            app:layout_constraintEnd_toEndOf="parent"
            />


            <LinearLayout
                android:id="@+id/imageadd"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/dash_border"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/imageproj"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/imageIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Upload Image"
                    android:src="@drawable/image_add" />

                <TextView
                    android:id="@+id/dragText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Select an Image"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        <TextView
            android:id="@+id/environmentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is your project Rural or Urban"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageadd"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Spinner
            android:id="@+id/environmentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:prompt="@string/spinner_prompt"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/environmentTextView"
            app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/projectOrgTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Organisation"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/environmentSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/nameorg"
                android:layout_width="400dp"
                android:layout_height="55dp"
                android:background="@drawable/rounded_input_bg"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/projectOrgTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donate Goal"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameorg"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/fundgoal"
                android:layout_width="400dp"
                android:layout_height="55dp"
                android:background="@drawable/rounded_input_bg"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/fund"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:backgroundTint="#8E75A3"
                android:text="Sumbit"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/fundgoal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>